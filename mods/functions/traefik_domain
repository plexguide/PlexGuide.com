traefik_domain() {

priordomain=$(cat /pg/var/traefik/traefik.domain)

common_message "ğŸš€ PlexGuide | Traefik Domain Interface" "
ğŸ’¾ Domain utilized for Traefik?

Prior Info Saved (If Any): $priordomain
[Z] To Cancel and Go Back
"

read -p "â†˜ï¸  New Domain? | Press [ENTER]: " typed < /dev/tty

if [[ "$typed" == "Z" || "$typed" == "z" ]]; then traefik_menu_start && exit; fi
if [[  "$typed" == "" ]]; then common_message "â›”ï¸  WARNING: Cannot Be Blank" && common_confirm && traefik_domain && exit; fi

echo $typed > /pg/var/traefik/traefik.domain

common_message "ğŸ’¾  $typed - New Set Domain!"
common_confirm && traefik_menu_start && exit

}
