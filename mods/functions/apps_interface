apps_interface() {

app_display=$(cat /pg/tmp/"$app_select".wrap)
fmt -w 79 "cat /pg/tmp/appstoinstall.list" > "/pg/tmp/appstoinstall.wrap"
apps_to_install=$(cat /pg/tmp/appstoinstall.wrap)

common_message "ğŸš€ Multi-App Installer | PGX Edition | ğŸ“‚ App Install ~ $app_select" "
$app_display

Apps to Install:
$apps_to_install

[Z] Exit Interface
"

read -p 'â†˜ï¸  Type App to Install | Press [ENTER]: ' typed < /dev/tty

## error check
existcheck=$(echo $app_display | grep "$typed" -w)
if [ -z "$existcheck" ]; then
echo
read -p 'â›”ï¸  '$typed' <<< does not exist | Press [ENTER]' badinput < /dev/tty
apps_interface; fi

echo "$typed" >> /pg/tmp/appstoinstall.list

#apps_menu_select

# recycle menu back to user
apps_interface

}
