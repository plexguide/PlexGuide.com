traefik_email() {

traefik_menu_start_setup

common_message "ğŸš€ PlexGuide | Traefik E-Mail Interface" "
ğŸ’¾ E-Mail Utilized for Traefik? Not required, but provides domain updates!

Prior Info Saved (If Any): $email
[Z] To Cancel and Go Back
"

read -p "â†˜ï¸  New email? | Press [ENTER]: " typed < /dev/tty

if [[ "$typed" == "Z" || "$typed" == "z" ]]; then traefik_menu_start && exit; fi
if [[ "$typed" == "" ]]; then common_message "â›”ï¸  WARNING: Cannot Be Blank" && common_confirm && traefik_email && exit; fi
if [[ $(echo $typed | grep "\.") == "" || $(echo $typed | grep "\@") == "" ]]; then common_message "â›”ï¸  WARNING: EMail missing a . or @ ~ Try Again" && common_confirm && traefik_email && exit; fi

echo $typed > "$traefik_path"/t.email

common_message "ğŸ’¾  $typed - New Set email!"
common_confirm && traefik_menu_start && exit

}
