traefik_keys() {

ls -p "/pg/var/traefik/$provider" | grep -v / > /pg/tmp/provider.key.select
focusedkey=$(sed -n "$menutmp"p /pg/tmp/provider.key.select)
priorinfo=$(cat /pg/var/$provider/$focusedkey)
if [[ "" -eq "$priorinfo" ]]; then priorinfo="None"; fi

common_message "ğŸš€ PlexGuide | Traefik Variable Interface" "
ğŸ’¾ What is the input for - $focusedkey?

Prior Info Saved (If Any): $priorinfo
[Z] To Cancel and GoBack"

read -p 'â†˜ï¸  Set Info - $focusedkey | Press [ENTER]: ' typed < /dev/tty

if [[ "$typed" == "Z" || "$typed" == "z" ]]; then traefik_menu_start && exit; fi
if [[  "$typed" == "" ]]; then common_message "â›”ï¸  WARNING: OS Check" && common_confirm && traefik_keys && exit; fi

echo $typed >> /pg/var/$provider/$focusedkey
echo ""
common_message "ğŸ’¾  $typed saved for $provider - $focusedkey"
common_confirm && traefik_menu_start && exit

}
