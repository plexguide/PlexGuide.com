shield_setup() {

shield_setup_start

# WebClient ID Entry ###########################################################
shield_web_client() {
temp_path="/pg/var/shield/web.client"
priorentry=$(cat $temp_path)

common_message "ğŸš€ PlexGuide | Shield: WebClient-ID Interface" "ğŸ’¾ WebClient-ID for Shield? Visit ~ https://console.developers.google.com

Prior Info Saved (If Any): $priorentry
[Z] Cancel"

read -p "â†˜ï¸  New WebClient-ID? | Press [ENTER]: " typed < /dev/tty

if [[ "$typed" == "Z" || "$typed" == "z" ]]; then shield_setup && exit; fi
if [[ "$typed" == "" ]]; then common_message "â›”ï¸  WARNING: Cannot Be Blank" && common_confirm && shield_web_client && exit; fi

echo $typed > $temp_path
common_message "ğŸ’¾  $typed - WebClient Set!"
common_confirm && shield_setup && exit
}

# WebClient ID Entry ###########################################################
shield_web_secret() {
temp_path="/pg/var/shield/web.secret"
priorentry=$(cat $temp_path)

common_message "ğŸš€ PlexGuide | Shield: WebSecret-ID Interface" "ğŸ’¾ WebSecret-ID for Shield? Visit ~ https://console.developers.google.com

Prior Info Saved (If Any): $priorentry
[Z] Cancel"

read -p "â†˜ï¸  New WebSecret-ID? | Press [ENTER]: " typed < /dev/tty

if [[ "$typed" == "Z" || "$typed" == "z" ]]; then shield_setup && exit; fi
if [[ "$typed" == "" ]]; then common_message "â›”ï¸  WARNING: Cannot Be Blank" && common_confirm && shield_web_secret && exit; fi

echo $typed > $temp_path
common_message "ğŸ’¾  $typed - WebSecret Set!"
common_confirm && shield_setup && exit
}

# Users Management - Main Interface ############################################
shield_user_interface() {
shield_setup_start

  # Updates Authorized User Count
  shield_setup_start_uc
  shield_uc=$(cat /pg/var/shield/user.count)

common_message "ğŸš€  Shield User Interface" "ğŸ’¬ Current Authorized Users: $shield_uc

[1] User: Add
[2] User: Remove a Users
[3] User: Remove All & Remove Shield
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
[Z] Exit Interface"
common_number

case $typed in
    1 ) shield_add_user && shield_user_interface && exit ;;
    2 ) shield_remove_user && shield_user_interface && exit ;;
    #3 ) shield_remove_all && shield_user_interface && exit ;;
    z ) shield_setup && exit ;;
    Z ) shield_setup && exit ;;
    * ) shield_user_interface && exit ;;
esac
}

# Users Management - Add Users #################################################
shield_add_user () {
common_header "ğŸš€  Adding User - Type Exact GMail Address to Add or [Z] to Exit!"
common_number

if [[ "$typed" == "Z" || "$typed" == "z" ]]; then shield_user_interface && exit; fi
if [[ "$typed" == "" ]]; then shield_add_user && exit; fi
if [[ $(echo $typed | grep '@') == "" ]]; then shield_add_user && exit; fi
if [[ $(cat /pg/var/shield/user.list | grep "\<$typed\>") ]]; then
  common_header "WARNING: User Already Exists! Exiting!"
  common_confirm && shield_user_interface && exit; fi
shield_email_add="$typed"
common_header "$shield_email_add - Is this Correct? [Y/N]"
common_number
if [[ "$typed" != "y" || "$typed" != "Y" ]]; then shield_add_user && exit; fi
if [[ $(cat /pg/var/shield/user.list) == "" ]]; then echo $shield_email_add > /pg/var/shield/user.list
else echo $shield_email_add >> /pg/var/shield/user.list; fi
common_header "ğŸš€  $shield_email_add - User Added"
common_confirm
shield_user_interface && exit
}

# Users Management - Remove a User #############################################
shield_remove_user () {

user_wrap=$(fmt -w 79 "/pg/var/shield/user.list")

common_message "ğŸš€  Shield Remove User" "ğŸ’¬ Type Exact Address of User to Remove!

$user_wrap
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
[Z] Exit Interface"
common_number

if [[ "$typed" == "Z" || "$typed" == "z" ]]; then shield_user_interface && exit; fi
if [[ "$typed" == "" ]]; then shield_add_remove_user && exit; fi
if [[ $(echo $typed | grep '@') == "" ]]; then shield_remove_user && exit; fi
if [[ $(cat /pg/var/shield/user.list | grep "\<$typed\>") == "" ]]; then
  common_header "WARNING: User Does Not Exist! Resetting"
  common_confirm && shield_remove_user && exit; fi
shield_email_remove="$typed"
common_header "$shield_email_remove - Is this Correct? [Y/N]"
common_number
if [[ "$typed" != "y" || "$typed" != "Y" ]]; then shield_remove_user && exit; fi
common_header "ğŸš€  $shield_email_add - Removed User"
common_confirm
shield_user_interface && exit
}

