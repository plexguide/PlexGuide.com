#!/bin/bash
############# https://github.com/plexguide/PlexGuide.com/graphs/contributors ###
apps_loop_install() {

  i=0
  while read p; do
    let "i=i+1"
    if [[ "$p" == "plex" ]]; then plex_claim_interface; plex; fi

    container_rebuild $p
    ansible-playbook "/pg/apps/$p.yml"
    common_header "ðŸš€ Docker: Process Complete ~ $p"

  done </pg/tmp/appstoinstall.list

echo ""
read -p "â†˜ï¸  Installed $i $app_select application(s) | Press [Enter]" typed < /dev/tty

# recycle menu back to user
apps_menu; exit

}
