drives_menu_start() {

drives_menu_start_setup

common_message "ğŸš€  Drives - Mount Transport Data Interface" "
ğŸ’¬  Further Explanation? Visit ~ http://drives.plexguide.com
------------------------------------------------------------------------------
$digmessage[1] Top Level Domain App: [$tld]
[2] Domain Provider     : [$provider]
[3] Domain Name         : [$domain]
[4] EMail Address       : [$email]
[5] DNS Delay Check     : [$delaycheck] Seconds
------------------------------------------------------------------------------
$minidisplay
------------------------------------------------------------------------------
$alphadisplay
$def
------------------------------------------------------------------------------
[Z] Exit Interface
"
common_number

if [[ "$typed" -ge "$tnumber" ]]; then
common_message "â›”ï¸  Typed a Selection that does not exist | [PRESS ENTER]"
common_confirm && drives_menu_start && exit; fi

case $typed in
    1 ) drives_menu_start && exit ;;
    2 ) drives_providers  && drives_menu_start && exit ;;
    3 ) drives_domain && drives_menu_start && exit ;;
    4 ) drives_email && drives_menu_start && exit ;;
    5 ) drives_delay && drives_menu_start && exit ;;
    6 ) menutmp=1 && drives_keys && drives_menu_start && exit ;;
    7 ) menutmp=2 && drives_keys && drives_menu_start && exit ;;
    8 ) menutmp=3 && drives_keys && drives_menu_start && exit ;;
    9 ) menutmp=4 && drives_keys && drives_menu_start && exit ;;
    A ) drives_deploy && drives_menu_start && exit ;;
    a ) drives_deploy && drives_menu_start && exit ;;
    B ) drives_deploy && drives_menu_start && exit ;;
    b ) drives_deploy && drives_menu_start && exit ;;
    z ) start_menu && exit ;;
    Z ) start_menu && exit ;;
    * ) drives_menu_start && exit ;;
esac

}
