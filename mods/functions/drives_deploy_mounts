drives_deploy_mounts() {

sdselect=$1
drives_menu_start_setup

service_path="/etc/systemd/system/$1.service"

if [[ -e "$service_path" ]]; then
common_header "ðŸ’¾  NOTICE:  Stopping/Disabling OLD Service - $1"; sleep 1
systemctl daemon-reload && systemctl stop $1 && systemctl disable $1 && rm -rf "$service_path"; fi

## add in later
#EnvironmentFile=/pg/var/rclone/rclone.env
#--user-agent="$uagent" \
#--log-file=/pg/logs/{drive}.log \
#--log-level="$vfs_ll" \

cat <<- EOF > "$service_path"
[Unit]
Description=$1 Daemon
After=multi-user.target

[Service]
Type=notify
ExecStart=/usr/bin/rclone mount $1: /pg/$1 \
--config=$rclone_path \
--uid=1000 --gid=1000 --umask=002 \
--allow-other \
--timeout=1h \
--tpslimit=8 \
--allow-non-empty \
--drive-skip-gdocs \
--dir-cache-time=$dir_cache_time$rclone_minutes
--vfs-cache-mode=writes \
--vfs-cache-max-age=$vfs_cache_max_age$rclone_hours \
--vfs-cache-max-size=$vfs_cache_max_size \
--vfs-read-chunk-size-limit=$vfs_read_chunk_size_limit$rclone_MB \
--vfs-read-chunk-size=$vfs_read_chunk_size$rclone_MB \
--buffer-size=$buffer_size$rclone_MB

ExecStop=/bin/fusermount -uz /pg/$1 > /dev/null
TimeoutSec=60
User=0
Group=0
Restart=on-abort
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target
EOF

common_fcreate /pg/$1
common_header "ðŸ’¾  NOTICE:  Starting/Enabling NEW Service - $1" && sleep 1
systemctl daemon-reload && systemctl enable $1 && systemctl restart $1

common_header "ðŸ’¾  ENABLED:  Drive /pg/$1" && sleep 1.5
}
