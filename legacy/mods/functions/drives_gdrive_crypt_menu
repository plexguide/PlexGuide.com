common_number

case $typed in
    Y ) echo "YES" > /pg/var/drives/gd/gd.crypt && drives_gdrive_menu && exit ;;
    y ) echo "YES" > /pg/var/drives/gd/gd.crypt && drives_gdrive_menu && exit ;;
